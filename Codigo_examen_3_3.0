def limitar_entry_contra(entrada, limit):
    def limitar(event):
        texto = entrada.get()
        if len(texto)>=limit and not event.keysym=='BackSpace':
            return "break"
    entrada.bind("<Key>", limitar)
    
def limitar_entry(entrada, limit):
    def limitar(event):
        texto = entrada.get()
        if len(texto)>=limit and not event.keysym=='BackSpace':
            return "break"
        if not event.char.isalpha() and not event.keysym=='BackSpace':
            return "break"
    entrada.bind("<Key>", limitar)

def limitar_entry_num(entrada, limit):
    def limitar(event):
        texto = entrada.get()
        if len(texto)>=limit and not event.keysym=='BackSpace':
            return "break"
        if not event.char.isdigit() and not event.keysym=='BackSpace':
            return "break"
    entrada.bind("<Key>", limitar)
    
